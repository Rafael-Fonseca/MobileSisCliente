<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms" 
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:MobileSisCliente.Views"
       x:Class="MobileSisCliente.AppShell">

    <TabBar>
        <!-- O primeiro nessa lista é a página inicial, aparentemente é a hierarquia da qual a doc fala -->
        <ShellContent Title="Consultar Clientes"
                      Icon="icon_about.png"
                      ContentTemplate="{DataTemplate views:ClientsPage}" />
        <ShellContent Title="Adicionar Cliente"
                      Icon="icon_feed.png"
                      ContentTemplate="{DataTemplate views:ClientEntryPage}" />
    </TabBar>
    
</Shell>
